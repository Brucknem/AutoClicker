            <RichTextBox x:Name="InstructionsTextBox" Margin="5" Padding="2" VerticalScrollBarVisibility="Auto">
                <RichTextBox.Resources>
                    <Style TargetType="{x:Type Paragraph}">
                        <Setter Property="Margin" Value="0"/>
                    </Style>
                </RichTextBox.Resources>
            </RichTextBox>

        </DockPanel>
    </Border>
</Window>
